{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webSiteSettings": {
            "type": "object"
        },
        "apiVersions": {
            "type": "object"
        },
        "iotHubEndPoint": {
            "type": "string"
        },
        "iotHubPrimaryKey": {
            "type": "string"
        },
        "cosmosDBAccountEndPoint": {
            "type": "string"
        },
        "cosmosDBAccountKey": {
            "type": "string"
        },
        "notificationHubConnectionString": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
            "name": "[parameters('webSiteSettings').webAppHostingPlanName]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('webSiteSettings').location]",
            "tags": {
                "displayName": "HostingPlan"
            },
            "sku": {
                "name": "[parameters('webSiteSettings').webAppSkuName]",
                "capacity": "1"
            },
            "properties": {
                "name": "[parameters('webSiteSettings').webAppHostingPlanName]"
            }
        },
        {
            "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
            "name": "[parameters('webSiteSettings').cosmosDbinitWebapp]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('webSiteSettings').location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('webSiteSettings').webAppHostingPlanName)]": "Resource",
                "displayName": "Website"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms/', parameters('webSiteSettings').webAppHostingPlanName)]"
            ],
            "properties": {
                "name": "[parameters('webSiteSettings').cosmosDbinitWebapp]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('webSiteSettings').webAppHostingPlanName)]"
            },
            "resources": [
                {
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "name": "web",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('webSiteSettings').cosmosDbinitWebapp)]"
                    ],
                    "tags": {
                        "displayName": "WebAppConfig"
                    },
                    "properties": {
                        "phpVersion": "5.6",
                        "netFrameworkVersion": "v4.6",
                        "use32BitWorkerProcess": false,
                        "webSocketsEnabled": true,
                        "alwaysOn": true,
                        "remoteDebuggingEnabled": true,
                        "remoteDebuggingVersion": "VS2015"
                    }
                },
                {
                    "name": "MSDeploy",
                    "type": "extensions",
                    "location": "[parameters('webSiteSettings').location]",
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webSiteSettings').cosmosDbinitWebapp)]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').cosmosDbinitWebapp, '/config/web')]"
                    ],
                    "tags": {
                        "displayName": "WebPackageDeploy"
                    },
                    "properties": {
                        "packageUri": "[parameters('webSiteSettings').cosmosDbinituri]",
                        "dbType": "None",
                        "connectionString": "",
                        "setParameters": {
                            "IIS Web Application Name": "[parameters('webSiteSettings').cosmosDbinitWebapp]"
                        }
                    }
                },
                {
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "name": "Appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('webSiteSettings').cosmosDbinitWebapp)]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').cosmosDbinitWebapp, '/config/web')]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').cosmosDbinitWebapp, '/Extensions/MSDeploy')]"
                    ],
                    "properties": {
                        "endpoint": "[parameters('cosmosDBAccountEndPoint')]",
                        "authKey": "[parameters('cosmosDBAccountKey')]",
                        "database": "MSIoT",
                        "collection1": "Templates",
                        "collection2": "Messages",
                        "collection3": "Groups",
                        "Throughput": "400"
                    }
                }
            ]
        },
        {
            "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
            "name": "[parameters('webSiteSettings').deviceManagementPortalWebSiteName]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('webSiteSettings').location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('webSiteSettings').webAppHostingPlanName)]": "Resource",
                "displayName": "Website"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms/', parameters('webSiteSettings').webAppHostingPlanName)]",
                "[concat('Microsoft.Web/sites/', parameters('webSiteSettings').cosmosDbinitWebapp)]",
                "[concat('Microsoft.Web/sites/', parameters('webSiteSettings').cosmosDbinitWebapp, '/config/appsettings')]",
                "[concat('Microsoft.Web/sites/', parameters('webSiteSettings').cosmosDbinitWebapp, '/extensions/MSDeploy')]"
            ],
            "properties": {
                "name": "[parameters('webSiteSettings').deviceManagementPortalWebSiteName]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('webSiteSettings').webAppHostingPlanName)]"
            },
            "resources": [
                {
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "name": "web",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('webSiteSettings').deviceManagementPortalWebSiteName)]"
                    ],
                    "tags": {
                        "displayName": "WebAppConfig"
                    },
                    "properties": {
                        "phpVersion": "5.6",
                        "netFrameworkVersion": "v4.6",
                        "use32BitWorkerProcess": false,
                        "webSocketsEnabled": true,
                        "alwaysOn": true,
                        "remoteDebuggingEnabled": true,
                        "remoteDebuggingVersion": "VS2015"
                    }
                },
                {
                    "name": "MSDeploy",
                    "type": "extensions",
                    "location": "[parameters('webSiteSettings').location]",
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webSiteSettings').deviceManagementPortalWebSiteName)]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').deviceManagementPortalWebSiteName, '/config/web')]"
                    ],
                    "tags": {
                        "displayName": "WebPackageDeploy"
                    },
                    "properties": {
                        "packageUri": "[parameters('webSiteSettings').deviceManagementPortalPackageuri]",
                        "dbType": "None",
                        "connectionString": "",
                        "setParameters": {
                            "IIS Web Application Name": "[parameters('webSiteSettings').deviceManagementPortalWebSiteName]"
                        }
                    }
                },
                {
                    "apiVersion": "[parameters('apiVersions').webAppApiVersion]",
                    "name": "Appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('webSiteSettings').deviceManagementPortalWebSiteName)]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').deviceManagementPortalWebSiteName, '/config/web')]",
                        "[concat('Microsoft.Web/Sites/', parameters('webSiteSettings').deviceManagementPortalWebSiteName, '/Extensions/MSDeploy')]"
                    ],
                    "properties": {
                        "AzureAd:ClientId": "[parameters('webSiteSettings').clientId]",
                        "AzureAd:ClientSecret": "[parameters('webSiteSettings').clientSecret]",
                        "AzureAd:TenantId": "[parameters('webSiteSettings').tenantId]",
                        "AzureAd:CallbackPath": "/signin-oidc",
                        "IotHub:HostName": "[parameters('iotHubEndPoint')]",
                        "IotHub:ConnectionString": "[concat('HostName=', parameters('iotHubEndPoint'), ';SharedAccessKeyName=', parameters('webSiteSettings').iotHubKeyName, ';SharedAccessKey=', parameters('iotHubPrimaryKey'))]",
                        "IotHub:CacheRefreshMinutes": "1",
                        "CosmosDb:Endpoint": "[parameters('cosmosDBAccountEndPoint')]",
                        "CosmosDb:AuthKey": "[parameters('cosmosDBAccountKey')]",
                        "CosmosDb:Database": "[parameters('webSiteSettings').cosmosDbName]",
                        "NotificationHub:ConnectionString": "[parameters('notificationHubConnectionString')]"
                    }
                }
            ]
        }
    ],
    "outputs": {
        "cosmosDbinitUrl": {
            "type": "string",
            "value": "[concat('https://', parameters('webSiteSettings').cosmosDbinitWebapp,'.azurewebsites.net')]"
        },
        "deviceManagementPortalUrl": {
            "type": "string",
            "value": "[concat('https://', parameters('webSiteSettings').deviceManagementPortalWebSiteName,'.azurewebsites.net')]"
        }
    }
}
